# Complex configuration with multiple servers and locations

# Server 1: Main website for example.com
server {
    listen 80;
    server_name example.com www.example.com;
    root /var/www/website;
    index index.html index.htm;
    client_max_body_size 8m;

    # Custom error pages
    error_page 404 /error_pages/404.html;
    error_page 500 502 503 504 /error_pages/50x.html;

    # Default location for general content
    location / {
        allowed_methods GET POST;
        autoindex off;
    }

    # Location for static assets like images and CSS
    # This location has a different root directory
    location /assets/ {
        allowed_methods GET;
        root /var/www/static_content;
        autoindex on; # It might be useful to list asset directories
    }

    # Location for handling API requests, allowing different methods
    location /api/ {
        allowed_methods POST DELETE;
        client_max_body_size 16m; # Allow larger payloads for API endpoints
    }
}

# Server 2: A separate service for file hosting
server {
    listen 8081;
    server_name files.example.com;
    root /srv/files;

    # This server is primarily for uploads and downloads
    # Note: No top-level index or allowed_methods are defined,
    # they must be specified within location blocks.

    location /downloads/ {
        allowed_methods GET;
        autoindex on; # List contents of download directories
    }

    location /uploads/ {
        allowed_methods POST;
        client_max_body_size 100m; # Allow large file uploads
        autoindex off; # Do not show contents of the upload directory
    }
}